{
  "name": "twitter-backend-clone",
  "version": "1.0.0",
  "description": "A practice project to learn and comprehend the basics and the fundementals of Twitter's backend structure.",
  "main": "./src/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec \"ts-node\" src/index.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "jest --runInBand"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "seed": "ts-node --project tsconfig.seed.json src/scripts/seed.ts"
  }
}
